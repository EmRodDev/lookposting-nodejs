<main class="container">
    <form action="/vacancies/new" method="POST" class="default-form">
        <h3>General Information</h3>
        <div class="field">
            <label>Title</label>
            <input type="text" name="title" placeholder="E.g. React Developer" />
        </div>
        <div class="field">
            <label>Company</label>
            <input type="text" name="company" placeholder="E.g. Hiring Company" />
        </div>
        <div class="field">
            <label>Location</label>
            <input type="text" name="location" placeholder="E.g. Uruguay or remote" />
        </div>
        <div class="field">
            <label>Salary (USD)</label>
            <input type="text" name="salary" placeholder="E.g. U$S500" />
        </div>
        <div class="field">
            <label>Contract</label>
            <select name="contract" id="">
                <option value="" disabled selected>-- Select --</option>
                <option value="Freelance">Freelance</option>
                <option value="Full-time">Full-time</option>
                <option value="Part-time">Part-time</option>
                <option value="By project">By project</option>
            </select>
        </div>
        <h3>Job description</h3>
        <div class="field description">
            <label>Description</label>
            <input type="hidden" id="x" name="description"/>
            <trix-editor input="x"></trix-editor>
        </div>
        <h3>Knowledges</h3>
        <ul class="list-knowledges">
            {{#selectSkills work}}
            {{/selectSkills}}
        </ul>
        <div class="field center-horizontal">
            <input type="hidden" name="skills" id="skills">
            <input type="submit" value="Publish" class="btn btn-blue">
        </div>
    </form>
</main>