<main class="list-vacancies">
    <h2>Vacancy list</h2>
    
        {{#if vacancies.length}}

            {{#each vacancies}}
            <div class="vacancy">
                <div class="box">
                    <h3>{{this.company}}</h3>
                    <p class="position">{{title}}</p>
                </div>

                <div class="box">
                    <p class="tag">Location</p>
                    <p class="name">{{location}}</p>
                </div>

                <div class="box">
                    <p class="tag">Contract</p>
                    <p class="name contract">{{contract}}</p>
                </div>
                <div class="box center-vertical">
                    <a href="/vacancies/{{url}}" class="btn btn-green">More info</a>
                </div>
            </div>
            {{/each}}
        {{else}}
            <p>There is no vacancies</p>
        {{/if}}
</main>