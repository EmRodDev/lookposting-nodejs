<div class="content-superior vacancy container">
    <div class="box">
        <p class="tag">Company</p>
        <p class="name">{{vacancy.company}}</p>
    </div>
    <div class="box">
        <p class="tag">Location</p>
        <p class="name">{{vacancy.location}}</p>
    </div>
    <div class="box">
        <p class="tag">Contract</p>
        <p class="name">{{vacancy.contract}}</p>
    </div>
    <div class="box">
        <p class="tag">Salary</p>
        <p class="name">$ {{vacancy.salary}}</p>
    </div>
</div>

<div class="vacancy-container container">
    <main class="content">
        <h2>Description</h2>
        <div class="vacancy-description">
            {{{vacancy.description}}}
        </div>
        <a href="/vacancies/edit/{{vacancy.url}}" class="btn btn-blue edit-btn">Edit vacancy</a>
    </main>
    <aside class="sidebar">
        
        <h2>Desired knowledges</h2>
        <ul class="skills">
            {{#each vacancy.skills}}
                <li>{{this}}</li>
            {{/each}}
        </ul>
    </aside>

</div>

<div class="container data-recruiter">
    <div class="send-data">
        <h2>Contact recruiter</h2>
        <p>Fill the next form, upload your CV and we will contact you soon</p>
        <form method="POST" action="/vacancies/{{vacancy.url}}" class="default-form" enctype="multipart/form-data">
            <div class="field">
                <label>Name</label>
                <input type="text" name="name" placeholder="Your name">
            </div>
            <div class="field">
                <label>Email</label>
                <input type="email" name="email" placeholder="Your email">
            </div>
            <div class="field">
                <label>CV (PDF)</label>
                <input type="file" name="cv">
            </div>
            <div class="field">

                <input type="submit" class="btn btn-green" value="Send">
            </div>
        </form>
    </div>
    <div class="info-recruiter">
        <h2>Recruiter's information</h2>
        {{#if vacancy.author.name}}
            <p>{{vacancy.author.name}}</p>
        {{/if}}
        {{#if vacancy.author.image}}
            <img src="/uploads/profiles/{{vacancy.author.image}}"/>
        {{/if}}
    </div>
</div>