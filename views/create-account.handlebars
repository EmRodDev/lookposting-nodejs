<main class="container">
    <form action="/create-account" method="POST" class="default-form">
        <div class="field">
            <label>Name</label>
            <input type="text" name="name" placeholder="Your name">
        </div>
        <div class="field">
            <label>Email</label>
            <input type="email" name="email" placeholder="Your email">
        </div>
        <div class="field">
            <label>Password</label>
            <input type="password" name="password" placeholder="Your password">
        </div>
         <div class="field">
            <label>Repeat password</label>
            <input type="password" name="confirm" placeholder="Repeat your password">
        </div>
        <div class="field actions">
            <a href="/login">Return to the login page</a>
        </div>
        <div class="field">
            <input type="submit" value="Create account" class="btn btn-blue">
        </div>
    </form>
</main>