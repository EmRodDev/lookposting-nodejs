<main class="container">
    <form action="/recover-password" method="POST" class="default-form">
        <div class="field">
            <label>Email</label>
            <input type="email" placeholder="Your email" name="email" required>
        </div>

        <div class="field actions">
            <a href="/log-in">Return to the log in page</a>
        </div>
        <div class="field">
            <input type="submit" value="Reset password" class="btn btn-blue">
        </div>
    </form>
</main>